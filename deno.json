{
	"name": "@vsce/bundler",
	"version": "1.0.0",
	"exports": {
		".": "./mod.ts"
	},
	"tasks": {
		"check": "deno check mod.ts",
		"test": "deno test --allow-all tests/",
		"lint": "deno lint --fix",
		"fmt": "deno fmt",
		"build": "deno run --allow-all scripts/build.ts",
		"publish-dry": "npx jsr publish --dry-run"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.0",
		"@std/path": "jsr:@std/path@^1.0.0",
		"@std/fs": "jsr:@std/fs@^1.0.0",
		"@std/fs/walk": "jsr:@std/fs/walk@^1.0.0",
		"@std/fmt/colors": "jsr:@std/fmt/colors@^1.0.0",
		"@deno/emit": "jsr:@deno/emit@^0.46.0",
		"@typed/vscode": "jsr:@typed/vscode@^1.101.0"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"*.ts",
			"*.tsx",
			"*.json"
		]
	}
}
